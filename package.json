{
  "name": "agent-company",
  "version": "0.1.0",
  "description": "AIエージェントを会社として運用するフレームワーク",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
