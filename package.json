{
  "name": "agent-company",
  "version": "0.1.0",
  "description": "AIエージェントを会社として運用するフレームワーク",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "lint": "eslint . --ext .ts && cd gui/web && npm run lint && cd ../.. && prettier --check \"**/*.{ts,json,md,yaml}\" --ignore-path .gitignore",
    "lint:fix": "eslint . --ext .ts --fix && cd gui/web && npm run lint:fix && cd ../.. && prettier --write \"**/*.{ts,json,md,yaml}\" --ignore-path .gitignore",
    "format": "prettier --write \"**/*.{ts,json,md,yaml}\" --ignore-path .gitignore",
    "test": "vitest run --coverage",
    "test:watch": "vitest",
    "e2e": "playwright test",
    "e2e:ui": "playwright test --ui",
    "ci": "npm run lint && npm run test && npm run e2e",
    "cli": "tsx tools/cli/agentcompany.ts",
    "up": "powershell -ExecutionPolicy Bypass -File scripts/start.ps1",
    "down": "powershell -ExecutionPolicy Bypass -File scripts/stop.ps1",
    "status": "powershell -ExecutionPolicy Bypass -File scripts/status.ps1"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "eslint": "^8.55.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@playwright/test": "^1.40.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "fast-check": "^3.14.0",
    "tsx": "^4.6.0"
  },
  "dependencies": {
    "yaml": "^2.3.4",
    "gray-matter": "^4.0.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
