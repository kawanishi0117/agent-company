    "prettier": "^3.1.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0",
    "fast-check": "^3.14.0",
    "tsx": "^4.6.0"
  },
  "dependencies": {
    "yaml": "^2.3.4",
    "gray-matter": "^4.0.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
